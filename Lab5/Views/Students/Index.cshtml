@model IEnumerable<CRUD_MVC.Models.Student>

<h2>Students List</h2>
<a asp-action="Create" class="btn btn-primary">Add Student</a>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Age</td>
                <td>@student.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>